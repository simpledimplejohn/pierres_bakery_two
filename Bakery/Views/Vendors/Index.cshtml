@{
  Layout = "_Layout";
}

@using Bakery.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendorss have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  <h4><a href='/vendors/@vendor.Id'>@vendor.Description</a></h4>
  @* its also a link to the path of the category.Id to a details page called Show.cshtml *@
}

<p><a href='/'>Back home</a></p>
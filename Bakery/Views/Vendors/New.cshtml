@{
  Layout = "_Layout";
}

<h1>Add a vendor</h1>
<p>Add a vendor here:</p>
@* action is where the POST request will be *@
<form action="/vendors" method="post">
  <label for="vendorName">Vendor name</label>
  <input id="vendorName" name="vendorName" type="text">
  <br/>
  <label for="vendorDescription">Vendor description</label>
  <input id="vendorDescription" name="vendorDescription" type="text">
  
  <button type="submit">Add</button>
</form>

<p><a href="/">Back home</a></p>
<p><a href="/vendors">Back to vendors page.</a></p>